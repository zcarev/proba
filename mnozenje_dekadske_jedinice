import streamlit
import random

# Funkcija za generiranje zadataka
def generiraj_zadatke():
    zadaci = []
    dekadske_jedinice = [10, 100, 1000, 10000]
    for _ in range(10):
        broj = round(random.uniform(0.1, 10), 3)
        dekadska_jedinica = random.choice(dekadske_jedinice)
        zadaci.append((broj, dekadska_jedinica))
    return zadaci

# Provjera je li zadaci već postoje u session_state
if 'zadaci' not in streamlit.session_state:
    streamlit.session_state.zadaci = generiraj_zadatke()

# Funkcija za provjeru odgovora
def provjeri_odgovore(zadaci, odgovori):
    tocan = 0
    for (broj, dekadska_jedinica), odgovor in zip(zadaci, odgovori):
        try:
            if round(broj * dekadska_jedinica, 3) == round(float(odgovor.replace(',', '.')), 3):
                tocan += 1
        except ValueError:
            pass
    return tocan

streamlit.title("Provjera znanja množenja decimalnih brojeva s dekadskim jedinicama")

odgovori = []
for i, (broj, dekadska_jedinica) in enumerate(streamlit.session_state.zadaci):
    odgovor = streamlit.text_input(f"Zadatak {i+1}: {broj} * {dekadska_jedinica} =", "")
    odgovori.append(odgovor)

if streamlit.button("Provjeri odgovore"):
    tocan = provjeri_odgovore(streamlit.session_state.zadaci, odgovori)
    streamlit.write(f"Točno ste riješili {tocan} od 10 zadataka.")

if streamlit.button("Novi zadaci"):
    streamlit.session_state.zadaci = generiraj_zadatke()
    #streamlit.experimental_rerun()
